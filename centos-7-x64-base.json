{
    "builders": [{
        "name": "centos-7-x64-base",
        "type": "virtualbox-iso",
        "format": "ova",
        "virtualbox_version_file": ".vbox_version",
        "headless": false,

        "guest_os_type": "RedHat_64",
        "disk_size": 40960,

        "iso_url": "http://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
        "iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb",
        "iso_checksum_type": "sha1",

        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-x64/ks.cfg<enter><wait>"
        ],
        "boot_wait": "10s",

        "http_directory": "http",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

        "ssh_username": "root",
        "ssh_password": "password",
        "ssh_port": 22,
        "ssh_wait_timeout": "60m",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "vm_name": "centos-7-x64-base",

        "shutdown_command": "/sbin/halt -h -p"
    }],
    "post-processors": [{
        "output": "build/centos-7-x64-base.box",
        "type": "vagrant",
        "keep_input_artifact": true
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "{{.Vars}} bash '{{.Path}}'",
        "scripts": [
            "scripts/centos7/extra-pkgs.sh",
            "scripts/centos/network.sh",
            "scripts/centos/vboxguest.sh",
            "scripts/centos/vagrant.sh",
            "scripts/centos/upgrade.sh",
            "scripts/centos/compact.sh"
        ]
    }]
}
