{
    "builders": [{
        "name": "centos-6.5-x86_64-salt",
        "type": "virtualbox-ovf",
        "format": "ova",
        "source_path": "output-centos-6.5-x86_64-base/centos-6.5-x86_64-base.ova",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "1h",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"],
            ["modifyvm", "{{.Name}}", "--nic1", "nat"],
            ["modifyvm", "{{.Name}}", "--macaddress1", "080027723d37"]
        ],
        "vm_name": "centos-6.5-x86_64-salt",
        "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
    }],
    "post-processors": [{
        "output": "build/centos-6.5-x86_64-salt.box",
        "type": "vagrant"
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "scripts": [
            "scripts/salt.sh"
        ]
    }]
}
